<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rexicore.budgetr.TotalFeesFrag">

    <TextView
        android:id="@+id/total_expenses_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_expenses"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/total_expense_textview"
        android:layout_toStartOf="@+id/total_expense_textview"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

    <TextView
        android:id="@+id/total_expense_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/total_expenses_ph"/>

    <ListView
        android:id="@+id/expense_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/total_expense_textview"/>

</RelativeLayout>
